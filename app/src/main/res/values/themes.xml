<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RemeMed" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_1</item>
        <item name="colorPrimaryVariant">@color/blue_darkest</item>
        <item name="colorOnPrimary">@color/backgrpundcolor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_2</item>
        <item name="colorSecondaryVariant">@color/blue_2.2</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Toolbar1Theme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/blue_darkest</item>
        <item name="titleTextColor"> @color/backgrpundcolor</item>
    </style>

    <style name="CustomChip1" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipStrokeColor">@color/blue_2</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipBackgroundColor">@color/backgrpundcolor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomChip2" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipStrokeColor">@color/blue_2.2</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipBackgroundColor">@color/blue_darkest</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>