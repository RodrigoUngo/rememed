<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rememed.rememed">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".RemeMedApplication"
        android:allowBackup="true"
        android:icon="@mipmap/rememed_icon"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/rememed_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RemeMed">
        <activity
            android:name=".ui.historymeds.HistoryMeds"
            android:exported="false" />
        <activity
            android:name=".ui.addprescriptions.AddNewPrescription"
            android:exported="false" />
        <activity
            android:name=".ui.prescriptions.Prescriptions"
            android:exported="false" />
        <activity
            android:name=".ui.addsymptoms.AddSymptoms"
            android:exported="false" />
        <activity
            android:name=".ui.register.Register"
            android:exported="false" />

        <meta-data
            android:name="com.google.android.actions"
            android:resource="@xml/network_security_config" />

        <activity
            android:name=".ui.addmedmanagers.AddMedManager"
            android:exported="false" />
        <activity
            android:name=".ui.addmanagers.AddManagers"
            android:exported="false" />
        <activity
            android:name=".ui.medmanagers.MedManager"
            android:exported="false" />
        <activity
            android:name=".ui.managers.Managers"
            android:exported="false" />
        <activity
            android:name=".MainMenu"
            android:exported="false" />
        <activity
            android:name=".ui.symptoms.Symptoms"
            android:exported="false" />
        <activity
            android:name=".ui.login.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>